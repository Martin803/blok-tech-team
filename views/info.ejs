            <input type="radio" id="time7" name="choose-time">
            <label for="time7">14:00</label>

            <input type="radio" id="time8" name="choose-time">
            <label for="time8">15:00</label> 

            <input type="radio" id="time9" name="choose-time">
            <label for="time9">16:00</label>

            <input type="radio" id="time10" name="choose-time">
            <label for="time10">17:00</label>

            <input type="radio" id="time11" name="choose-time">
            <label for="time11">18:00</label> 

            <input type="radio" id="time12" name="choose-time">
            <label for="time12">19:00</label>
        </div>

        <div class="info-container">
            <i class="fa fa-map-marker fa-2x"></i>
            <h3>Vind Buddy</h3>
        </div>

        <div class="buttons">
        <a href="/pupple" class="decline">X</a>
        <a href="/confirm" class="volgende">Bevestigen</a>
        </div>
    </section>  

